<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".questionPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questionHeading"
            android:layout_margin="8dp"
            tools:text="This is heading"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#232323"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/img"
            tools:src="@drawable/black"
            android:elevation="5dp"
            android:padding="10dp"
            />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           >
           <ProgressBar
               android:id="@+id/progressBar"
               android:layout_width="260dp"
               style="@style/Widget.AppCompat.ProgressBar.Horizontal"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:max="3"
               android:minHeight="50dp"
               android:indeterminate="false"
               android:progress="1"
               android:elevation="3dp"
               />
           <TextView
               android:id="@+id/progressText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:text="1/3"
               android:layout_margin="13dp"
               android:textSize="18dp"
               />
       </LinearLayout>
        <TextView
            android:id="@+id/option1"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/textviewbox"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Follow God"
            android:textColor="#1E1E1E"
            android:textSize="22sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/option2"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/textviewbox"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Follow God"
            android:textColor="#1E1E1E"
            android:textSize="22sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/option3"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/textviewbox"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Follow God"
            android:textColor="#1E1E1E"
            android:textSize="22sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/option4"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/textviewbox"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Follow God"
            android:textColor="#1E1E1E"
            android:textSize="22sp"
            android:layout_margin="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sumbit"
            android:layout_margin="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SUMBIT"
            android:background="#FA8490"
            android:textColor="#FFFFFF"
            android:elevation="5dp"
            />

    </LinearLayout>

</ScrollView>